        <name>Check-In</name>
        <onclick/>
        <order>100</order>
        <script><![CDATA[current.update();

//find for the lead guest user in Guest Reservation m2m table.

uguest_m2m = new GlideRecord('x_94581_myhotel_m2m_uguests_ureservations');
uguest_m2m.addQuery('ureservation', current.sys_id);
uguest_m2m.orderByDesc('ulead');
uguest_m2m.setLimit(1);
uguest_m2m.query();

	//Insert the record in the ucheckin table

	var ucheckin = new GlideRecord('x_94581_myhotel_ucheck_in');
	ucheckin.udate = current.uarrival;
	ucheckin.uroom = current.uroom;

if(uguest_m2m.next())

	ucheckin.uguest = uguest_m2m.uguests;
	ucheckin.insert();

action.setRedirectURL(ucheckin);

	]]></script>
